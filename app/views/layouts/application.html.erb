<!DOCTYPE html>
<html>
  <head>
    <title><%= I18n.t('title') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class='Contents'>
        <h1>
          <%= link_to root_path do %>
            <%= I18n.t('title') %>
          <% end %>
        </h1>

        <nav>
          <% if user_signed_in? %>
            <% unless current_page?(root_path) %>
              <%= link_to root_path do %>
                <i class="fas fa-home"></i> トップページ
              <% end %>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          <% else %>
            <% unless current_page?(root_path) %>
              <%= link_to root_path do %>
                <i class="fas fa-home"></i> トップページ
              <% end %>
            <% end %>
            <% unless current_page?(new_user_session_path) %>
              <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt"></i> ログイン
              <% end %>
            <% end %>
            <% unless current_page?(new_user_registration_path)|| current_page?(instagram_images_path) || current_page?(youtube_videos_path) || controller.controller_name == 'youtube_videos' && controller.action_name == 'create' %>
              <%= link_to new_user_registration_path do %>
                <i class="fas fa-user-plus"></i> 新規登録
              <% end %>
            <% end %>
          <% end %>
        </nav>
      </div>
    </header>
    <section class='Header_Search'>
      <%= form_with url: youtube_videos_path, class: 'Header_Search__Form', local: true do |form| %>
        <%= form.search_field :search, placeholder: 'YouTube 動画検索', class: 'Header_Search__Form--Input-Text' %>

        <div class='Header_Search__Form__Number'>
          検索件数：<br />
          <%= form.radio_button :count, 1, checked: 'checked' %> 1件，
          <%= form.radio_button :count, 3 %> 3件，
          <%= form.radio_button :count, 5 %> 5件
        </div>
      <% end %>
      <i class='fas fa-search'></i>
    </section>

    <%= yield %>
  </body>
</html>
